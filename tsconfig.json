{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["esnext", "ES2021"],
    "types": ["node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "noEmit": true,
  }
}
